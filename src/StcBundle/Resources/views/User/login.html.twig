<section id="connexion" class="row visible-lg">
    <h2 class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
        Pour jouer, vous devez vous connecter :
    </h2>
    <p class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
        <a href="#">Pas encore inscrit ? Inscrivez-vous !</a>
    </p>
    {{form_start(userForm, {'action' : path('login'),
                            'attr' : {'class' : 'col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3 '}
                            })
    }}
    <fieldset class ="row">
        <div class="col-xs-12">
            {{form_widget(userForm.login)}}
        </div>
        <div class="col-xs-12">
            {{form_widget(userForm.password)}}
        </div>
        <div class="col-xs-12">
            {{form_widget(userForm.submit)}}
        </div>
    </fieldset>
    {{form_end(userForm)}}
</section>
