            </div>
        </div>
    </section>
    <!-- /Scores -->

    <!-- Contact -->
    <section id="contact">
        <div class="row">
            <h1 class="col-sm-2 col-sm-offset-1">
                Contact
            </h1>
        </div>
        <div class="row">
            <form method="post" class="col-sm-10 col-sm-offset-1">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="row">
                            <div class="col-sm-12">
                                <input type="text" name="name" placeholder="Votre nom" class="form-control" required />
                            </div>
                            <div class="col-sm-12">
                                <input type="email" name="mail" placeholder="Votre adresse mail" class="form-control" required />
                            </div>
                            <div class="col-sm-12">
                                <input type="submit" value="Envoyer !" class="form-control btn-primary" required />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <textarea rows="6" name="message" class="form-control" placeholder="Entrez votre message" required></textarea>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- /Contact -->

</main>
{% endblock %}