{% extends 'StcBundle::base.html.twig' %}

{% block title %}
Accueil
{% endblock %}

{% block content %}
<!-- Bannière -->
<header>
    <div class="row margin-0">
        <div class="col-xs-12 padding-0">
            <a href="#">
                <img src="http://fakeimg.pl/1366x150/?text=Bannière" alt="Bannière Shoot the code" title="Shoot the Code" />
            </a>
        </div>
    </div>
</header>
<!-- /Bannière -->

<main class="container-fluid">

    <!-- Avertissement aux personnes n'ayant pas activé Javascript -->
    <noscript>
        <section class="row">
            <p class="col-sm-10 col-sm-offset-1 col-md-4 col-md-offset-4 text-center">
                Ce jeu n'est accessible que pour les navigateurs autorisant javascript, désolé !
            </p>
        </section>
    </noscript>
    <!-- /Avertissement aux personnes n'ayant pas activé Javascript -->

    <!-- Jouer -->
    <section id="jouer" class="row visible-lg">
        <a href="jouer.html">
            <img src="http://fakeimg.pl/400x150/?text=Solo" alt="Jouer en solo" title="Jouer en solo" class="col-lg-2 col-lg-offset-2" />
        </a>
        <a href="jouer.html">
            <img src="http://fakeimg.pl/400x150/?text=Multi" alt="Créer une partie multijoueur" title="Créer une partie multijoueur" class="col-lg-2 col-lg-offset-1" />
        </a>
        <a href="jouer.html">
            <img src="http://fakeimg.pl/400x150/?text=Rejoindre" alt="Rejoindre une partie" title="Rejoindre une partie" class="col-lg-2 col-lg-offset-1" />
        </a>
    </section>
    <!-- /Jouer -->

    <!-- Connexion -->
    <section id="connexion" class="row hidden">
        <h2 class="col-sm-10 col-sm-offset-">
            Pour jouer, vous devez vous connecter :
        </h2>
        <p class="col-sm-10 col-sm-offset-1">
            <a href="#">Pas encore inscrit ? Inscrivez-vous !</a>
        </p>
        <form method="post" class="col-sm-10 col-sm-offset-1">
            <fieldset class="row">
                <div class="col-xs-12">
                    <input type="text" name="login" placeholder="Entrez votre pseudo" class="form-control" required />
                </div>
                <div class="col-xs-12">
                    <input type="password" name="password" placeholder="*********" class="form-control" required />
                </div>
                <div class="col-xs-12">
                    <input type="submit" value="Se connecter" class="form-control btn-primary" />
                </div>
            </fieldset>
        </form>
    </section>
    <!-- /Connexion -->

    <!-- Inscription -->
    <section id="inscription" class="row hidden-lg">
        <h2 class="col-sm-10 col-sm-offset-1">
            Inscription :
        </h2>
        <p class="col-sm-10 col-sm-offset-1">
            <a href="#">Retourner au formulaire de connexion.</a>
        </p>
        <p class="col-sm-10 col-sm-offset-1">
            Attention : votre résolution actuelle ne vous permet pas de jouer à ce jeu.
        </p>
        <form method="post" class="col-sm-10 col-sm-offset-1">
            <fieldset class="row">
                <div class="col-xs-12">
                    <input type="text" name="login" placeholder="Entrez votre pseudo" class="form-control" required />
                </div>
                <div class="col-xs-12">
                    <input type="password" name="password" placeholder="Entrez un mot de passe" class="form-control" required />
                </div>
                <div class="col-xs-12">
                    <input type="password" name="password2" placeholder="Retapez votre mot de passe" class="form-control" required />
                </div>
                <div class="col-xs-12">
                    <input type="email" name="mail_inscription" placeholder="Entrez votre adresse mail" class="form-control" required />
                </div>
                <div class="col-xs-12">
                    <input type="submit" value="S'inscrire" class="form-control btn-primary" />
                </div>
            </fieldset>
        </form>
    </section>
    <!-- /Inscription -->

    <!-- Règles -->
    <section id="regles">
        <div class="row">
            <h1 class="col-sm-2 col-sm-offset-1">
                Règles
            </h1>
        </div>
